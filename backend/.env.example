# Configuration de la base de données PostgreSQL
DB_NAME=streambox
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432

# Configuration du serveur
PORT=5000
NODE_ENV=development

# Frontend URL pour CORS
FRONTEND_URL=https://streambox-1m7t.onrender.com

# JWT Secret (générer une clé aléatoire sécurisée)
JWT_SECRET=votre_secret_jwt_tres_securise_ici

# JWT Expiration (en secondes)
JWT_EXPIRES_IN=86400

# --- Cloudflare R2 (optionnel: recommandé pour le stockage des vidéos en production)
# Remplissez si vous utilisez Cloudflare R2 pour stocker les vidéos et miniatures.
R2_BUCKET_NAME=
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=

# --- FRONTEND URLS (pour CORS) - virgule séparée
# Exemple: FRONTEND_URLS="https://monfrontend.vercel.app,https://autre.netlify.app"
FRONTEND_URLS=

# --- Options de fallback / SQLite
# Permet d'utiliser SQLite si aucune DB distante n'est configurée
DB_USE_SQLITE=true
DB_STORAGE=./database.sqlite
